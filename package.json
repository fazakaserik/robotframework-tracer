{
  "name": "robot-framework-tracer",
  "publisher": "erik-fazakas",
  "author": {
    "name": "Erik Fazakas"
  },
  "displayName": "Robot Framework Tracer",
  "icon": "resource/icon.png",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Testing",
    "Helpers"
  ],
  "activationEvents": [
    "workspaceContains:**/*.{robot,resource}"
  ],
  "main": "./out/robotframework_tracer/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "robot-framework-tracer.updateListener",
        "title": "Robot Framework Tracer: Update robot listener"
      }
    ],
    "configuration": [
      {
        "title": "Display",
        "type": "object",
        "properties": {
          "robotframeworkTracer.display.primaryLocation": {
            "default": "Top Left",
            "description": "Primary location of where the display should appear.",
            "enum": [
              "Top Left",
              "Top Middle",
              "Top Right",
              "Bottom Left",
              "Bottom Middle",
              "Bottom Right"
            ]
          },
          "robotframeworkTracer.display.secondaryLocation": {
            "default": "Bottom Left",
            "description": "Secondary location of where the display should appear, when the display is hovered at the primary location.",
            "enum": [
              "Top Left",
              "Top Middle",
              "Top Right",
              "Bottom Left",
              "Bottom Middle",
              "Bottom Right"
            ]
          },
          "robotframeworkTracer.display.traceMouseMovement": {
            "default": true,
            "description": "Determines whether the mouse movement should be traced.",
            "type": "boolean"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "extensionDependencies": [
    "d-biehl.robotcode"
  ],
  "dependencies": {
    "@vscode/python-extension": "^1.0.5"
  }
}
